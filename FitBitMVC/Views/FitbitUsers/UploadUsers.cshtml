@model FitBitMVC.ViewModels.GroupsViewModel

@{
    ViewBag.Title = "Upload list of users";
}
@Html.Partial("UserMenu")
<h2>Upload list of users from a CSV file</h2>

@using (Html.BeginForm("UploadUsers", "FitbitUsers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
                @Html.AntiForgeryToken()

                <div>
            
                    <div class="form-group">
            @Html.LabelFor(model => model.Groups, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedGroup, Model.Groups)
                @Html.ValidationMessageFor(m => m.SelectedGroup)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("File", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="upload" name="upload" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" onclick="" />
            </div>
        </div>
    </div>


}
